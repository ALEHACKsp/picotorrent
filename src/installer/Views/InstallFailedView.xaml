<UserControl x:Class="PicoTorrentBootstrapper.Views.InstallFailedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PicoTorrentBootstrapper.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="10,0,10,0">
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock TextAlignment="Center" FontWeight="Bold">Installation failed</TextBlock>
                </StackPanel>
                <TextBlock HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap">
                    Unfortunately, installation failed. You can reach out on either our Discord or file an issue on GitHub
                    to make us aware of the issue.
                </TextBlock>
                <TextBlock HorizontalAlignment="Center" TextAlignment="Center">
                    Please have the installer <Hyperlink Command="{Binding OpenLogFiles}">log files</Hyperlink> ready!
                </TextBlock>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="10">
                <TextBlock>
                    <Hyperlink NavigateUri="https://discord.gg/tV3dFrv" TextDecorations="None" RequestNavigate="Hyperlink_RequestNavigate">
                        <Image Source="../Resources/discord.png" Width="48" Margin="5" />
                    </Hyperlink>
                </TextBlock>
                <TextBlock>
                    <Hyperlink NavigateUri="https://github.com/picotorrent/picotorrent" TextDecorations="None" RequestNavigate="Hyperlink_RequestNavigate">
                        <Image Source="../Resources/github.png" Width="48" Margin="5" />
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
